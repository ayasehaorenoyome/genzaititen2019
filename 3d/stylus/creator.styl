#creator
    
	#wrap
        
        #creator_select
            width calc(100vw - 20px)
            margin 0 auto
            cursor pointer
            flexBox()
            justify-content space-between
            +MQ(SP_RES_WID)
                width calc(100vw - 10px)
            .select_btn
                display block
                position relative
                padding 20px 0 20px
                align-self center
                width calc(50vw - 20px)
                margin-bottom 1.0em
                background #fff
                color #179a99
                font-family pilar-pro, sans-serif
                font-weight 400
                font-style normal
                fontSize(54)
                text-align center
                border 1px dashed #179a99
                border-radius 10px 10px 0 0 
                box-shadow 0 0 0 8px #fff,0 0 0 10px #179a99
                transition .15s ease-in-out
                +MQ(SP_RES_WID)
                    fontSize(20)
                    padding 10px 0 10px
                    width calc(50vw - 10px)
                    box-shadow 0 0 0 4px #fff,0 0 0 5px #179a99
                &:hover
                    color #fff
                    border 1px dashed #ffe225
                    background #179a99
                    box-shadow 0 0 0 10px #179a99
                    +MQ(SP_RES_WID)
                        box-shadow 0 0 0 5px #179a99
                span 
                    fontSize(20)
                    font-family 'Noto Sans JP', sans-serif
                    line-height 2.5em
                    letter-spacing 0.04em
                    transition .2s
                    +MQ(SP_RES_WID)
                        margin-top 20px
                        fontSize(14)
                        line-height 2em
                &.select_active
                    color #fff
                    border 1px dashed #ffe225
                    background #179a99
                    box-shadow 0 0 0 10px #179a99
                    +MQ(SP_RES_WID)
                        box-shadow 0 0 0 5px #179a99
        section
            width 80vw
            +MQ(SP_RES_WID)
                width 90vw
            .inner
                h2  
                    margin-bottom 50px
                    color #179a99
                    font-family pilar-pro, sans-serif
                    font-weight 400
                    font-style normal
                    text-align center
                    background -webkit-linear-gradient(0deg, #179a99, #13bcbc)//背景色にグラデーションを指定
                    -webkit-background-clip text//テキストでくり抜く
                    -webkit-text-fill-color transparent//くり抜いた部分は背景を表示
                    fontSize(58)
                    +MQ(SP_RES_WID)
                        margin-bottom 15px
                        fontSize(34)
                    span
                        fontSize(22)
                        font-family 'Noto Sans JP', sans-serif
                        line-height 2.5em
                        letter-spacing 0.04em
                        +MQ(SP_RES_WID)
                            fontSize(12)
                h3 
                    margin-bottom 30px
                    padding-left 35px
                    background url(../../img/common/img_header_flag_active_3d.png)no-repeat
                    background-size contain
                    color #179a99
                    font-family 'Noto Sans JP', sans-serif
                    fontSize(28)
                    letter-spacing 0.06em
                    +MQ(SP_RES_WID)
                        margin-bottom 15px
                        padding-left 20px
                        fontSize(18)

            &#creator_intro
                padding 20px
                background #fff
                border 4px solid #179a99
                border-radius 20px
                +MQ(SP_RES_WID)
                    padding 7px
                    border 2px solid #179a99
                .inner
                    flexBox()
                    flex-direction column
                    padding 30px 20px
                    border 1px dashed #179a99
                    border-radius 15px
                    +MQ(SP_RES_WID)
                        padding 15px 5px
                p 
                    font-family 'Noto Sans JP', sans-serif
                    fontSize(20)
                    line-height 2em
                    letter-spacing 0.04em
                    +MQ(SP_RES_WID)
                        fontSize(14)

        /*進級*/
        #creator_promotion
            
            section
                &#creator_intro
                    background url(../../img/contents/img_creator_promation_intro_bg_01_3d.png)no-repeat,#fff
                    background-position right -10px bottom -12px
                    +MQ(SP_RES_WID)
                        background-size 40vw
                        background-position right -5px bottom 10%
                &#promotion_map
                    .map_container
                        overflow hidden
                        background #fff 
                        border 4px solid #179a99
                        border-radius 20px
                        +MQ(SP_RES_WID)
                            border 2px solid #179a99
                        .map_header
                            padding 35px 0
                            fontSize(22)
                            color #179a99
                            text-align center
                            font-family 'Noto Sans JP', sans-serif
                            border-bottom 4px solid #179a99
                            +MQ(SP_RES_WID)
                                padding 16px 0
                                fontSize(13)
                                border-bottom 2px solid #179a99
                        .map_content
                            width 100%
                            height auto
                &#promotion_work
                    .inner
                        .promotion_group
                            background #fff 
                            border 4px solid #179a99
                            border-radius 20px
                            margin-bottom 50px
                            &:last-child
                                margin-bottom 0
                            +MQ(SP_RES_WID)
                                border 2px solid #179a99
                            .group_header
                                flexBox()
                                justify-content space-between
                                align-items center
                                padding 20px 40px
                                font-family 'Noto Sans JP', sans-serif
                                border-bottom 4px solid #179a99
                                +MQ(SP_RES_WID)
                                    padding 16px 10px
                                    fontSize(13)
                                    border-bottom 2px solid #179a99
                                p
                                    color #179a99
                                    line-height 1.5em
                                    &.group_title
                                        fontSize(28)
                                        width 70%
                                        +MQ(SP_RES_WID)
                                            width 100%
                                            fontSize(16)
                                        .label
                                            padding 3px 4px
                                            margin-right 10px
                                            fontSize(20)
                                            color #ffffff
                                            vertical-align middle
                                            border-radius 5px
                                            +MQ(SP_RES_WID)
                                                padding 2px 3px
                                                margin-right 5px
                                                fontSize(12)
                                                border-radius 3px
                                                vertical-align top
                                            &.web
                                                background #209f96
                                            &.graphic
                                                background #fbbf11
                                    &.group_title_sub
                                        fontSize(16)
                                        width 30%
                                        text-align right
                                        +MQ(SP_RES_WID)
                                            margin-top 10px
                                            width 100%
                                            fontSize(13)
                                            text-align left
                                        a
                                            fontSize(20)
                                            color #179a99
                                            +MQ(SP_RES_WID)
                                                fontSize(16)
                                                text-align left
                                    
                            .group_content
                                padding 30px 40px
                                +MQ(SP_RES_WID)
                                    padding 20px 10px
                                h4 
                                    margin-bottom 20px
                                    fontSize(24)
                                    color #179a99
                                    font-family 'Noto Sans JP', sans-serif
                                    +MQ(SP_RES_WID)
                                        margin-bottom 10px
                                        fontSize(16)
                                .content_sub
                                    padding-bottom 30px
                                    border-bottom 1px dashed #179a99
                                    +MQ(SP_RES_WID)
                                        padding-bottom 20px
                                    p 
                                        fontSize(20)
                                        line-height 1.5em
                                        +MQ(SP_RES_WID)
                                            fontSize(14)
                                .group_creator
                                    padding-top 30px
                                    +MQ(SP_RES_WID)
                                        padding-top 20px
                                    ul 
                                        flexBox()
                                        justify-content space-around
                                        +MQ(SP_RES_WID)
                                            justify-content flex-start
                                        li 
                                            width calc(100%/6)
                                            +MQ(SP_RES_WID)
                                                width calc(100%/2)
                                                &:nth-child(-n+3)
                                                    margin-bottom 15px
                                            p
                                                br 
                                                    display none
                                                    +MQ(920px)
                                                        display block
                                        .name
                                            margin-top 20px
                                            font-size 1vw
                                            text-align center
                                            color #179a99
                                            line-height 1em
                                            font-family 'Noto Sans JP', sans-serif
                                            +MQ(SP_RES_WID)
                                                fontSize(12)

        /*卒制*/
        #creator_graduation
            display none
            section
                &#creator_intro
                    background url(../../img/contents/img_creator_graduation_intro_bg_01_3d.png)no-repeat,#fff
                    background-position right -20px bottom -30px
                    +MQ(SP_RES_WID)
                        background-size 35vw
                        background-position right -5px bottom 10%
                &#graduation_map
                    .map_container
                        overflow hidden
                        background #fff 
                        border 4px solid #179a99
                        border-radius 20px
                        +MQ(SP_RES_WID)
                            border 2px solid #179a99
                        .map_header
                            border-bottom 4px solid #179a99
                            flexBox()
                            justify-content space-between
                            +MQ(SP_RES_WID)
                                border-bottom 2px solid #179a99
                            a
                                display block
                                width calc(100%/ 3)
                                padding 35px 0
                                fontSize(22)
                                color #179a99
                                text-align center
                                font-family 'Noto Sans JP', sans-serif
                                transition .2s
                                &:nth-child(2)
                                    border-left 1px dashed #179a99
                                    border-right 1px dashed #179a99
                                +MQ(SP_RES_WID)
                                    padding 16px 0
                                    fontSize(13)
                                &:hover
                                    background #ffe225
                                &.map_active
                                    background #ffe225
                        .map_content
                            width 100%
                            height auto
                &#graduation_work
                    .inner
                        .graduation_wrap
                            flexBox()
                            li 
                                margin 40px 1.33vw 0 0
                                width calc(100%/4 - 1vw)
                                &:nth-child(-n + 4)
                                    margin-top 0
                                    +MQ(SP_RES_WID)
                                        margin-top 35px
                                        &:first-child
                                            margin-top 0
                                &:nth-child(4n)
                                    margin-right 0
                                +MQ(SP_RES_WID)
                                    width 100%
                                img
                                    position relative
                                    display block
                                    width 100%
                                    height auto
                                    box-shadow 0 0 5px #ccc
                                    cursor pointer
                                    transition .2s
                                    &:hover
                                        opacity .6
                                h5  
                                    margin 30px 0 10px
                                    fontSize(24)
                                    color #179a99
                                    font-family 'Noto Sans JP', sans-serif
                                    +MQ(SP_RES_WID)
                                        margin 10px 0 5px
                                        fontSize(17)
                                    .label
                                        padding 2px 3px
                                        margin-right 5px
                                        display inline-block
                                        color #fff
                                        fontSize(18)
                                        vertical-align bottom
                                        border-radius 3px
                                        +MQ(SP_RES_WID)
                                            padding 2px 4px
                                            fontSize(14)
                                            vertical-align top
                                        &.charactor
                                            background #f0843b
                                        &.daily
                                            background #eb5443
                                        &.food
                                            background #34b395
                                        &.animal
                                            background #89c681
                                        &.baseball
                                            background #00b7f0
                                        &.tv
                                            background #b24f6e
                                        &.camera
                                            background #e94462
                                        &.reading
                                            background #5d65ae
                                        &.photo
                                            background #202c5c
                                p   
                                    fontSize(16)
                                    color #179a99
                                    font-family 'Noto Sans JP', sans-serif
                                    line-height 1.5em
                                    letter-spacing 0
                                    +MQ(SP_RES_WID)
                                        fontSize(13)
                            &#foyer,&#domehall
                                display none
                        #modal
                            display none
                            position fixed
                            top 0
                            left 0
                            width 100vw
                            height 100vh
                            background rgba(0,0,0,0.8)
                            z-index 9999
                            #modal_outer
                                position absolute
                                top 0
                                right 0
                                bottom 0
                                left 0
                                margin auto
                                max-width 750px
                                max-height 750px
                                width 80vw
                                height 90vh
                                border-radius 20px
                                overflow hidden
                                border 4px solid #179a99
                                +MQ(SP_RES_WID)
                                    width 90vw
                                    height 75vh
                                #modal_content
                                    width 100%
                                    background url(../../img/contents/img_modal_bg_3d.png)no-repeat , #fff
                                    background-position bottom -20px right -20px
                                    background-size 350px auto
                                    +MQ(SP_RES_WID)
                                        background-size 80vw
                                        background-position bottom center
                                    #modal_inner
                                        position relative
                                        overflow-y scroll
                                        height 100%
                                        &::-webkit-scrollbar
                                            display none
                                        a 
                                            position fixed
                                            top 5px
                                            right 5px
                                            display block
                                            width auto
                                            height auto
                                            color #179a99
                                            fontSize(50)
                                            transition .2s
                                            &:hover
                                                color #ffe225
                                            +MQ(SP_RES_WID)
                                                fontSize(40)
                                        #modal_img
                                            width 100%
                                            height auto
                                            box-shadow  0 0 5px #ccc
                                            img
                                                width 100%
                                                height auto
                                        #content_wrap
                                            padding 30px
                                            flexBox()
                                            justify-content space-between
                                            align-items center
                                            +MQ(SP_RES_WID)
                                                padding 15px 20px
                                                flex-direction column
                                                justify-content flex-start
                                            li
                                                height calc(90vh - 70vh)
                                                +MQ(SP_RES_WID)
                                                        width 100%
                                                        height auto
                                                &#content_l
                                                    width 75%
                                                    +MQ(SP_RES_WID)
                                                        width 100%
                                                        margin-top 10px
                                                &#content_r
                                                    width 25%
                                                    +MQ(SP_RES_WID)
                                                        flexBox()
                                                        justify-content space-around
                                                        margin-top 20px
                                                        height 30vh
                                                        width 100%
                                                        
                                                    img
                                                        width 100%
                                                        height auto
                                                        margin 0 auto
                                                        +MQ(SP_RES_WID)
                                                            height 100%
                                                            width auto
                                                        
                                                p
                                                    margin-bottom 5px
                                                    color #179a99
                                                    font-family 'Noto Sans JP', sans-serif
                                                    line-height 1.5em
                                                    letter-spacing 0
                                                    +MQ(SP_RES_WID)
                                                        margin-bottom 0
                                                    &#modal_name
                                                        fontSize(18)
                                                        +MQ(SP_RES_WID)
                                                            text-align center
                                                            fontSize(14)
                                                    &#modal_area
                                                        fontSize(16)
                                                        margin-bottom 0
                                                        +MQ(SP_RES_WID)
                                                            text-align center
                                                            fontSize(12)
                                                    &#modal_title
                                                        fontSize(28)
                                                        +MQ(SP_RES_WID)
                                                            margin 0 0 10px
                                                            text-align center
                                                            fontSize(16)
                                                    &#modal_txt
                                                        margin-top 10px
                                                        margin-bottom 0
                                                        padding 10px 0 30px
                                                        border-top 4px dotted #179a99
                                                        fontSize(16)
                                                        +MQ(SP_RES_WID)
                                                            margin-top 0
                                                            padding-top 10px
                                                            padding-bottom 0
                                                            border-top 2px dotted #179a99
                                                            text-align center
                                                            text-align justify
                                                            text-align-last left
                                                            fontSize(12)


