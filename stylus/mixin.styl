lastReset()
	h1, h2, h3, h4, h5, h6, p, div dt, dd, li
		&:last-child
			margin-bottom: 0;



vw(size){
	rate = 100 / 750;
	return rate * size * 1vw
}

fontSp(font_size){
	font-size: (font_size)vw;
}
